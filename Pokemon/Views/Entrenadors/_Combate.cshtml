@model Pokemon.Models.Entrenador

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <img class="player" src=@Model.Pokemon.Url />
            </div>
            <div class="col-md-6">
                <button class="atac" type="button" data-url="@Url.Content(string.Format("~/Entrenadors/Atacar/{0}",Model.Id))">Atacar</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="vida">
                    <div class="progress">
                        <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                             aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:@Model.Pokemon.Vida%">
                            <span class="sr-only">80% </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="col-md-6">
            <img class="player2" src=@Model.Enemy.Url />
            <div class="vida1">
                <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                         aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:@Model.Enemy.Vida%">
                        <span class="sr-only">80% </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Ganador != null)
{
<h2>El ganador es: @ViewBag.Ganador</h2>
}